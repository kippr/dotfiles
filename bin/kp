#!/bin/bash
#
tag=$1
if [ "" == "$tag" ] ; then
    for i in XXXX slime todo refactor style qq; do
        count=`ack -h "#\W*kp:\W+$i" -a |wc -l`
        echo -e "$count\t$i"
    done
    count=`ack -h "#\W*todo:\W+kp:"|wc -l`
    echo -e "$count\ttodo: kp (kp)"
else \
    if [ "$tag" == "kp" ] ; then
        tag="todo: kp"
    elif [ "$tag" == "-" ] ; then
        tag="kp: "
    else
        tag="kp: $tag"
    fi
    matching_files=`git grep -E -l "$tag"`
    for file in $matching_files ; do
        echo -e "\n$file\n---------------------------------------------------------------------------------"
        git --no-pager blame --date=short -- "$file" | ack -B 2 -A 5 "$tag"
    done
fi

