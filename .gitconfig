[user]
	name = Kris Powell
	email = krispowell@avocacapital.com
[color]
	ui = auto
[core]
	editor = /usr/bin/vim
	excludesfile = /Users/kip/.gitignore
	attributesfile = /Users/kip/.gitattributes
[color "diff"]
	whitespace = blue reverse
[alias]
    aa = add --all
	co = checkout
	ci = commit --verbose
	br = branch
	stat = status
	st = status
	s  = status
    l  = "!. ~/.githelpers && pretty_git_log --all"
    r  = "!git l -30"
	ll = log --stat --graph --decorate --all
	h  = log --stat --decorate -1
	di = diff
    diw = diff --color-words
	dc = diff --cached
    dcw = diff --cached --color-words
    amend = commit --amend -C HEAD
    re = "!. ~/.githelpers && rebase_unpushed"
	ctags = !.git/hooks/ctags
[diff "tgz"]
	textconv = tar zvtf
[diff "docx"]
	textconv = dump-docx.sh
[diff "xlsx"]
	textconv = dump-xlsx.sh
[diff]
	tool = vimdiff
[remote "origin"]
	push = HEAD
[push]
    default = current
[init]
	templatedir = ~/.git_template
